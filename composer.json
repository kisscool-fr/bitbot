{
    "name": "kisscool/bitbot",
    "description": "Bitbot. I'm a bit. Yes. No",
    "homepage": "https://bitbot.kisscool.net",
    "license": "MIT",
    "authors": [
        {
            "name": "KisSCoOl",
            "email": "kisscool@kisscool.net",
            "role": "Developer"
        }
    ],
    "config": {
        "bin-dir": "bin/",
        "optimize-autoloader": true,
        "platform": {
            "php": "8.0.28"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Bitbot\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitbot\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "hassankhan/config": "^3.1",
        "monolog/monolog": "^2.9",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "studio24/rotate": "^1.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "check": "composer validate --no-check-all --strict",
        "stan": "./bin/phpstan analyse --configuration=phpstan.neon",
        "style": "./bin/php-cs-fixer fix ./lib --dry-run --diff --show-progress dots",
        "style-fix": "./bin/php-cs-fixer fix ./lib --diff --show-progress dots",
        "test": "./bin/phpunit"
    }
}
